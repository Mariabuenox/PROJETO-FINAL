<%- include("../partials/head") %>

<body>
  <div class="page-box">
    <h1>Doar Agasalho</h1>
    <main>
      <form action="/doar_agasalho" method="POST" class="formItens">
        <table>
          <tr>
            <td>
              <select name="item" required>
                <option disabled selected>Selecione o tipo do agasalho</option>
                <option value="1">1 ponto - Agasalho usado</option>
                <option value="2">2 pontos - Agasalho de lã</option>
                <option value="5">5 pontos - Casaco pesado</option>
                <option value="10">10 pontos - Agasalho novo</option>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="number" name="quantidade" min="1" max="99" placeholder="Quantidade" required></td>
          </tr>

          <tr>
            <td><input type="date" name="data" required></td>
          </tr>

          <tr>
            <td>
              <select name="codigo_sala" required>
                <option disabled selected>Selecione a turma</option>
                <%- include("../partials/turmas") %>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="text" name="docente" placeholder="Docente responsável" required></td>
          </tr>
        </table>

        <button type="submit">Confirmar</button>
      </form>
    </main>
  </div>

  <a href="/"><button>Voltar ao início</button></a>

  <%- include("../partials/footer") %>
</body>
</html>
