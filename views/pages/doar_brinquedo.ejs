<%- include("../partials/head") %>

<body>
  <div class="page-box">
    <h1>Doar Brinquedos</h1>
    <main>
      <form action="/doar_brinquedo" method="POST" class="formItens">
        <table>
          <tr>
            <td>
              <select name="item" required>
                <option disabled selected>Escolha o brinquedo</option>
                <option value="1">1 ponto - Brinquedo usado</option>
                <option value="3">3 pontos - Jogo educativo</option>
                <option value="5">5 pontos - Brinquedo novo</option>
                <option value="8">8 pontos - Kit brinquedos</option>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="number" name="quantidade" min="1"  max="99" required placeholder="Quantidade"></td>
          </tr>

          <tr>
            <td><input type="date" name="data" required></td>
          </tr>

          <tr>
            <td>
              <select name="codigo_sala" required>
                <option disabled selected>Selecione a turma</option>
                <%- include("../partials/turmas") %>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="text" name="docente" required placeholder="Docente responsável"></td>
          </tr>
        </table>

        <button type="submit">Confirmar</button>
      </form>
    </main>
  </div>

  <a href="/"><button>Voltar ao início</button></a>

  <%- include("../partials/footer") %>
</body>
</html>
