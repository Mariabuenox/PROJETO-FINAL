<%- include("../partials/head") %>

<body>
  <div class="page-box">
    <main>
      <form action="/doar_alimento" method="POST" class="formItens">
        <table>
          <tr>
            <td>
              <select name="item" required>
                <option value="" disabled selected>Selecione o alimento</option>
                <option value="1">1 ponto - Arroz (1kg)</option>
                <option value="1">1 ponto - Feijão (1kg)</option>
                <option value="1">1 ponto - Macarrão (1 pacote)</option>
                <option value="2">2 pontos - Óleo (900ml)</option>
                <option value="3">3 pontos - Leite (1L)</option>
                <option value="5">5 pontos - Cesta básica completa</option>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="number" name="quantidade" placeholder="Quantidade" min="1" max="99" required></td>
          </tr>

          <tr>
            <td><input type="date" name="data" required></td>
          </tr>

          <tr>
            <td>
              <select name="codigo_sala" required>
                <option disabled selected>Selecione a turma</option>
                <%- include("../partials/turmas") %>
              </select>
            </td>
          </tr>

          <tr>
            <td><input type="text" name="docente" placeholder="Docente responsável" required></td>
          </tr>
        </table>

        <button type="submit">Confirmar</button>
      </form>
    </main>
  </div>

  <a href="/"><button>Voltar ao início</button></a>

  <%- include("../partials/footer") %>
</body>
</html>
