<%- include("../partials/head") %>

<body>
  <div class="page-box">
    <main>
      <form action="/doar_pet" method="POST" class="formItens">
        <table>

          <!-- Tipo de ração -->
          <tr>
            <td>
              <select name="item" required>
                <option disabled selected>Selecione o tipo da ração</option>
                <option value="1">1 ponto - Ração comum (cachorro)</option>
                <option value="2">2 pontos - Ração premium (cachorro)</option>
                <option value="1C">1 ponto - Ração comum (gato)</option>
                <option value="2C">2 pontos - Ração premium (gato)</option>
              </select>
            </td>
          </tr>

          <!-- Quantidade (número de doações) -->
          <tr>
            <td><input type="number" name="quantidade" min="1" max="99" placeholder="Quantidade" required></td>
          </tr>

          <!-- Data -->
          <tr>
            <td><input type="date" name="data" required></td>
          </tr>

          <!-- Turma -->
          <tr>
            <td>
              <select name="codigo_sala" required>
                <option disabled selected>Selecione a turma</option>
                <%- include("../partials/turmas") %>
              </select>
            </td>
          </tr>

          <!-- Docente -->
          <tr>
            <td><input type="text" name="docente" placeholder="Docente responsável" required></td>
          </tr>

        </table>

        <button type="submit">Confirmar</button>
      </form>
    </main>
  </div>

  <a href="/"><button>Voltar ao início</button></a>

  <%- include("../partials/footer") %>
</body>
</html>
